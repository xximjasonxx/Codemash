<app:LayoutAwarePage
    x:Class="Codemash.Client.Views.SessionsListView"
    xmlns:app="using:Codemash.Client.Core"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:code="using:Codemash.Client.Classes" mc:Ignorable="d">

    <Page.Resources>
        <CollectionViewSource x:Name="AllSessionsCollectionViewSource"
                              IsSourceGrouped="True" ItemsPath="Items" />

        <code:SessionItemTemplateSelector x:Name="templateSelector" />
    </Page.Resources>

    <Border Padding="7" Background="{StaticResource ApplicationBackgroundBrush}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="121*"/>
                <ColumnDefinition Width="221*"/>
                <ColumnDefinition Width="1010*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="103*"/>
                <RowDefinition Height="44*"/>
                <RowDefinition Height="539*"/>
                <RowDefinition Height="68*"/>
            </Grid.RowDefinitions>

            <Button x:Name="backButton" Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}"
                    Style="{StaticResource CMBackButton}" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center"
                    VerticalAlignment="Center"  Margin="0,18"/>

            <!-- Page Title TextBlock -->
            <TextBlock Text="All Sessions" Style="{StaticResource PageTitle}" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"
                       VerticalAlignment="Center" Height="67" Margin="0,18" />

            <!-- Grid View Block -->
            <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="10,10,10,0" Padding="20,10" Background="White">
                <GridView x:Name="theGridView" SelectionMode="None" IsItemClickEnabled="True" ItemTemplateSelector="{StaticResource templateSelector}"
                        ItemsSource="{Binding Source={StaticResource AllSessionsCollectionViewSource}}" ItemClick="SessionItem_Click">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            <Setter Property="Width" Value="300" />
                            <Setter Property="Margin" Value="0,0,40,0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GridViewItem">
                                        <Border>
                                            <!--<Rectangle x:Name="MouseOverRect" Opacity="0" Fill="Lime" />-->
                                            <ContentPresenter />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GridView.ItemContainerStyle>
                </GridView>
            </Border>
        </Grid>
    </Border>
</app:LayoutAwarePage>