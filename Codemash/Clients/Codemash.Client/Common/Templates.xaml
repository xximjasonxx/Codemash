<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="sessionItemTemplate">
        <Grid>
            <Rectangle Fill="White" IsHitTestVisible="False" />
            <TextBlock Text="{Binding Display}" Foreground="Black"
                       VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="19" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="sessionGroupItemTemplate">
        <Border BorderBrush="#FFDDDDDD" BorderThickness="0,0,0,2" Padding="0,0,0,15">
            <TextBlock Text="{Binding Display}" Style="{StaticResource GroupTitle}" HorizontalAlignment="Left" VerticalAlignment="Center" />
        </Border>
    </DataTemplate>

</ResourceDictionary>
